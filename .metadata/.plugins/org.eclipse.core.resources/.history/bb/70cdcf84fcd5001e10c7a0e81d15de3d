package com.animal.Entity;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.OneToOne;

@Entity
public class Result {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    // Change the type to SpinId and add @OneToOne annotation for the association
    @OneToOne
    @JoinColumn(name = "spin_id_id")  // Provide the correct column name for the join
    private SpinId spinId;

    private String result;

    public Result() {
        super();
    }

    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    public SpinId getSpinId() {
        return spinId;
    }

    public void setSpinId(SpinId spinId) {
        this.spinId = spinId;
    }

    public String getResult() {
        return result;
    }

    public void setResult(String result) {
        this.result = result;
    }

    public Result(Long id, SpinId spinId, String result) {
        super();
        this.id = id;
        this.spinId = spinId;
        this.result = result;
    }
}
